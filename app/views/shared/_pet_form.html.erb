<div id='<%="pet-#{t+1}"%>'>
<%= render 'shared/pet_error_messages', :t => t %> 
	<hr>
	<div class="pet-numeration"> 
		<h3 class="form-subtitle"><%="#{t+1})"%></h3>
	</div>
	<div class="pet-form-div">
	

	    <%= f2.label :name %>&nbsp;
	    <%= f2.label :age %>&nbsp;
	    <%= f2.label :pet_type_id, 'Type of pet'%>
	    </br>
	    <%= f2.text_field :name %>&nbsp;
	    <%= f2.text_field :age %>&nbsp;
	    <%= select("pet[t]", "pet_type_id", PetType.all.collect {|p| [ p.name, p.id ] }, {:include_blank => 'Select a pet type'}) %>
	
	</div>
</div>